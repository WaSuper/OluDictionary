<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1481e9" >

        <TextView
            android:id="@+id/word_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/word_list"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
        <ImageView
            android:id="@+id/word_img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/selector_btn_back"
            android:padding="5dp"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>

    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:background="@color/grey"
	    android:orientation="horizontal" >
	    
	    <TextView
	        android:id="@+id/word_title_1"
	        android:layout_weight="2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:text="word"
	        android:textColor="@color/light_blacktext"
	        android:textSize="14sp"
	        android:layout_marginLeft="5dp" />
	    
	    <TextView
	        android:id="@+id/word_title_2"
	        android:layout_weight="3"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:text="accent"
	        android:textColor="@color/light_blacktext"
	        android:textSize="14sp"
	        android:layout_marginLeft="5dp" />
	    
	    <TextView
	        android:id="@+id/word_title_3"
	        android:layout_weight="2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:text="type"
	        android:textColor="@color/light_blacktext"
	        android:textSize="14sp"
	        android:layout_marginLeft="5dp" />
	    
	    <TextView
	        android:id="@+id/word_title_4"
	        android:layout_weight="4"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:text="mean"
	        android:textColor="@color/light_blacktext"
	        android:textSize="14sp"
	        android:layout_marginLeft="5dp" />
	
	</LinearLayout>
    
    <ListView
	    android:id="@+id/word_listview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:cacheColorHint="@android:color/transparent"
	    android:divider="@drawable/listview_divider"
	    android:listSelector="@drawable/selector_listview" >
	</ListView>    
    
</LinearLayout>